<div class="post_box">
  <h3 class="post_header">{{images.author}}</h3>
  <h3 class="post_header">{{images.link}}</h3>
  <img class="image_box" src="{{images.link}}" alt="">

  <h4 class="post_header">{{images.description}}</h4>
  
  <form action="/gallery/{{images.id}}?_method=DELETE" method="POST">
    <input type="submit" value="D E L E T E">
  </form>
  
  <form action="/gallery/{{images.id}}/edit" method="GET">
    <input type="submit" value="CLICK HERE FOR EDIT FORM">
  </form>

</div>